#include <iostream>
using namespace std;

long long dp[1000][3]; // 0:R, 1:O, 2:B

int main() {
    int n;
    cin >> n;

    dp[1][0] = 1; // R
    dp[1][1] = 1; // O
    dp[1][2] = 1; // B

    for (int i = 2; i <= n; i++) {
        dp[i][0] = dp[i-1][1] + dp[i-1][2];
        dp[i][1] = dp[i-1][0] + dp[i-1][2];
        dp[i][2] = dp[i-1][0] + dp[i-1][1] + dp[i-2][1]; 
    }

    long long ans = dp[n][0] + dp[n][1] + dp[n][2];
    cout << ans << endl;
    return 0;
}
