#include <iostream>
#include <cmath>
using namespace std;

long long re(int a){
        if (a == 0){
            return 1;
        }
        if (a == 1){
            return 0;
        }
        if (a == 2){
            return 3;
        }
        if (a == 3){
            return 0;
        }
    return 4 * re(a - 2) - re(a - 4);
}
int main() {
    int n;
    cin >> n;
    long long ans;
    ans = re(n);
    cout << ans;
    return 0;
}
